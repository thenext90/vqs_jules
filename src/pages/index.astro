---
import MainLayout from '../layouts/MainLayout.astro';

const products = [
    { name: 'Organic Apples', image: 'https://picsum.photos/seed/apples/300/200', isCertified: true },
    { name: 'Artisanal Bread', image: 'https://picsum.photos/seed/bread/300/200', isCertified: true },
    { name: 'Fresh Milk', image: 'https://picsum.photos/seed/milk/300/200', isCertified: true },
    { name: 'Cheddar Cheese', image: 'https://picsum.photos/seed/cheese/300/200', isCertified: true },
    { name: 'Free-Range Eggs', image: 'https://picsum.photos/seed/eggs/300/200', isCertified: true },
    { name: 'Pasta', image: 'https://picsum.photos/seed/pasta/300/200', isCertified: true },
    { name: 'Tomatoes', image: 'https://picsum.photos/seed/tomatoes/300/200', isCertified: true },
    { name: 'Ground Coffee', image: 'https://picsum.photos/seed/coffee/300/200', isCertified: true },
    { name: 'Organic Pears', image: 'https://picsum.photos/seed/pears/300/200', isCertified: true },
    { name: 'Sourdough Bread', image: 'https://picsum.photos/seed/sourdough/300/200', isCertified: true },
    { name: 'Almond Milk', image: 'https://picsum.photos/seed/almondmilk/300/200', isCertified: true },
    { name: 'Gouda Cheese', image: 'https://picsum.photos/seed/gouda/300/200', isCertified: true },
    { name: 'Quail Eggs', image: 'https://picsum.photos/seed/quaileggs/300/200', isCertified: true },
    { name: 'Spaghetti', image: 'https://picsum.photos/seed/spaghetti/300/200', isCertified: true },
    { name: 'Cherry Tomatoes', image: 'https://picsum.photos/seed/cherrytomatoes/300/200', isCertified: true },
    { name: 'Espresso Beans', image: 'https://picsum.photos/seed/espresso/300/200', isCertified: true },
    { name: 'Green Apples', image: 'https://picsum.photos/seed/greenapples/300/200', isCertified: true },
    { name: 'Rye Bread', image: 'https://picsum.photos/seed/ryebread/300/200', isCertified: true },
    { name: 'Soy Milk', image: 'https://picsum.photos/seed/soymilk/300/200', isCertified: true },
    { name: 'Brie Cheese', image: 'https://picsum.photos/seed/brie/300/200', isCertified: true },
    { name: 'Duck Eggs', image: 'https://picsum.photos/seed/duckeggs/300/200', isCertified: true },
    { name: 'Penne Pasta', image: 'https://picsum.photos/seed/penne/300/200', isCertified: true },
    { name: 'Sun-dried Tomatoes', image: 'https://picsum.photos/seed/sundried/300/200', isCertified: true },
    { name: 'Dark Roast Coffee', image: 'https://picsum.photos/seed/darkroast/300/200', isCertified: true },
];
---

<MainLayout title="VQS - Certified Products">
    <div class="header-container">
        <h1>Our Certified Products</h1>
        <p>Quality and trust, certified by AI.</p>
    </div>
    <div class="product-grid">
        {products.map(product => (
            <div class="product-card">
                <img src={product.image} alt={product.name} />
                <div class="card-content">
                    <h3>{product.name}</h3>
                    {product.isCertified && (
                        <div class="certification-seal">
                            <span class="icon">âœ“</span>
                            <span>Certified by IA</span>
                        </div>
                    )}
                </div>
            </div>
        ))}
    </div>
</MainLayout>

<style>
    .header-container {
        text-align: center;
        margin-bottom: 2rem;
    }
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
    }
    .product-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        overflow: hidden;
        text-align: center;
        transition: transform 0.2s;
        display: flex;
        flex-direction: column;
    }
    .product-card:hover {
        transform: translateY(-5px);
    }
    .product-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .card-content {
        padding: 1rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .product-card h3 {
        margin: 0 0 1rem 0;
        font-size: 1.25rem;
    }
    .certification-seal {
        background-color: var(--brand-green);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-weight: bold;
        margin: 0 auto;
    }
    .certification-seal .icon {
        font-size: 1.2rem;
    }
</style>
