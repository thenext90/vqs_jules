---
import MainLayout from '../layouts/MainLayout.astro';

const products = [
    { name: 'Manzanas Orgánicas', isCertified: true },
    { name: 'Pan Artesanal', isCertified: true },
    { name: 'Leche Fresca', isCertified: true },
    { name: 'Queso Cheddar', isCertified: true },
    { name: 'Huevos de Granja', isCertified: true },
    { name: 'Pasta', isCertified: true },
    { name: 'Tomates', isCertified: true },
    { name: 'Café Molido', isCertified: true },
    { name: 'Peras Orgánicas', isCertified: true },
    { name: 'Pan de Masa Madre', isCertified: true },
    { name: 'Leche de Almendras', isCertified: true },
    { name: 'Queso Gouda', isCertified: true },
    { name: 'Huevos de Codorniz', isCertified: true },
    { name: 'Espagueti', isCertified: true },
    { name: 'Tomates Cherry', isCertified: true },
    { name: 'Café en Grano', isCertified: true },
    { name: 'Manzanas Verdes', isCertified: true },
    { name: 'Pan de Centeno', isCertified: true },
    { name: 'Leche de Soya', isCertified: true },
    { name: 'Queso Brie', isCertified: true },
    { name: 'Huevos de Pato', isCertified: true },
    { name: 'Pasta Penne', isCertified: true },
    { name: 'Tomates Secos', isCertified: true },
    { name: 'Café Tostado Oscuro', isCertified: true },
];
---

<MainLayout title="VQS - Productos Certificados">
    <div class="header-container">
        <h1>Nuestros Productos Certificados</h1>
        <p>Calidad y confianza, certificadas por IA.</p>
    </div>
    <div class="product-grid">
        {products.map(product => (
            <div class="product-card">
                <div class="card-content">
                    <h3>{product.name}</h3>
                    {product.isCertified && (
                        <div class="certification-seal">
                            <span class="icon">✓</span>
                            <span>Certificado por IA</span>
                        </div>
                    )}
                </div>
            </div>
        ))}
    </div>
</MainLayout>

<style>
    .header-container {
        text-align: center;
        margin-bottom: 2rem;
    }
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); /* Adjusted minmax */
        gap: 1.5rem; /* Adjusted gap */
    }
    .product-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        overflow: hidden;
        text-align: center;
        transition: transform 0.2s;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-height: 150px; /* Added min-height */
    }
    .product-card:hover {
        transform: translateY(-5px);
    }
    .card-content {
        padding: 1.5rem; /* Adjusted padding */
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .product-card h3 {
        margin: 0 0 1rem 0;
        font-size: 1.25rem;
    }
    .certification-seal {
        background-color: var(--brand-green);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-weight: bold;
        margin: 0 auto;
    }
    .certification-seal .icon {
        font-size: 1.2rem;
    }
</style>
