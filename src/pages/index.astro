---
import MainLayout from '../layouts/MainLayout.astro';

const products = [
    { name: 'Organic Apples', image: 'https://placehold.co/300x200/a8e6cf/333333?text=Apples', isCertified: true },
    { name: 'Artisanal Bread', image: 'https://placehold.co/300x200/dcedc1/333333?text=Bread', isCertified: false },
    { name: 'Fresh Milk', image: 'https://placehold.co/300x200/ffd3b6/333333?text=Milk', isCertified: true },
    { name: 'Cheddar Cheese', image: 'https://placehold.co/300x200/ffaaa5/333333?text=Cheese', isCertified: false },
    { name: 'Free-Range Eggs', image: 'https://placehold.co/300x200/a8e6cf/333333?text=Eggs', isCertified: true },
    { name: 'Pasta', image: 'https://placehold.co/300x200/dcedc1/333333?text=Pasta', isCertified: false },
    { name: 'Tomatoes', image: 'https://placehold.co/300x200/ffd3b6/333333?text=Tomatoes', isCertified: true },
    { name: 'Ground Coffee', image: 'https://placehold.co/300x200/ffaaa5/333333?text=Coffee', isCertified: true },
];
---

<MainLayout title="VQS - Certified Products">
    <div class="header-container">
        <h1>Our Certified Products</h1>
        <p>Quality and trust, certified by AI.</p>
    </div>
    <div class="product-grid">
        {products.map(product => (
            <div class="product-card">
                <img src={product.image} alt={product.name} />
                <div class="card-content">
                    <h3>{product.name}</h3>
                    {product.isCertified && (
                        <div class="certification-seal">
                            <span class="icon">âœ“</span>
                            <span>Certified by IA</span>
                        </div>
                    )}
                </div>
            </div>
        ))}
    </div>
</MainLayout>

<style>
    .header-container {
        text-align: center;
        margin-bottom: 2rem;
    }
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
    }
    .product-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        overflow: hidden;
        text-align: center;
        transition: transform 0.2s;
        display: flex;
        flex-direction: column;
    }
    .product-card:hover {
        transform: translateY(-5px);
    }
    .product-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .card-content {
        padding: 1rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .product-card h3 {
        margin: 0 0 1rem 0;
        font-size: 1.25rem;
    }
    .certification-seal {
        background-color: var(--brand-green);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-weight: bold;
        margin: 0 auto;
    }
    .certification-seal .icon {
        font-size: 1.2rem;
    }
</style>
