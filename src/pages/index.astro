    { name: 'Manzanas Orgánicas', image: 'https://source.unsplash.com/300x200/?manzanas', isCertified: true },
    { name: 'Pan Artesanal', image: 'https://source.unsplash.com/300x200/?pan', isCertified: true },
    { name: 'Leche Fresca', image: 'https://source.unsplash.com/300x200/?leche', isCertified: true },
    { name: 'Queso Cheddar', image: 'https://source.unsplash.com/300x200/?queso', isCertified: true },
    { name: 'Huevos de Granja', image: 'https://source.unsplash.com/300x200/?huevos', isCertified: true },
    { name: 'Pasta', image: 'https://source.unsplash.com/300x200/?pasta', isCertified: true },
    { name: 'Tomates', image: 'https://source.unsplash.com/300x200/?tomates', isCertified: true },
    { name: 'Café Molido', image: 'https://source.unsplash.com/300x200/?cafe', isCertified: true },
    { name: 'Peras Orgánicas', image: 'https://source.unsplash.com/300x200/?peras', isCertified: true },
    { name: 'Pan de Masa Madre', image: 'https://source.unsplash.com/300x200/?pan de masa madre', isCertified: true },
    { name: 'Leche de Almendras', image: 'https://source.unsplash.com/300x200/?leche de almendras', isCertified: true },
    { name: 'Queso Gouda', image: 'https://source.unsplash.com/300x200/?queso gouda', isCertified: true },
    { name: 'Huevos de Codorniz', image: 'https://source.unsplash.com/300x200/?huevos de codorniz', isCertified: true },
    { name: 'Espagueti', image: 'https://source.unsplash.com/300x200/?espagueti', isCertified: true },
    { name: 'Tomates Cherry', image: 'https://source.unsplash.com/300x200/?tomates cherry', isCertified: true },
    { name: 'Café en Grano', image: 'https://source.unsplash.com/300x200/?cafe en grano', isCertified: true },
    { name: 'Manzanas Verdes', image: 'https://source.unsplash.com/300x200/?manzanas verdes', isCertified: true },
    { name: 'Pan de Centeno', image: 'https://source.unsplash.com/300x200/?pan de centeno', isCertified: true },
    { name: 'Leche de Soya', image: 'https://source.unsplash.com/300x200/?leche de soya', isCertified: true },
    { name: 'Queso Brie', image: 'https://source.unsplash.com/300x200/?queso brie', isCertified: true },
    { name: 'Huevos de Pato', image: 'https://source.unsplash.com/300x200/?huevos de pato', isCertified: true },
    { name: 'Pasta Penne', image: 'https://source.unsplash.com/300x200/?pasta penne', isCertified: true },
    { name: 'Tomates Secos', image: 'https://source.unsplash.com/300x200/?tomates secos', isCertified: true },
    { name: 'Café Tostado Oscuro', image: 'https://source.unsplash.com/300x200/?cafe oscuro', isCertified: true },
];
---

<MainLayout title="VQS - Productos Certificados">
    <div class="header-container">
        <h1>Nuestros Productos Certificados</h1>
        <p>Calidad y confianza, certificadas por IA.</p>
    </div>
    <div class="product-grid">
        {products.map(product => (
            <div class="product-card">
                <img src={product.image} alt={product.name} />
                <div class="card-content">
                    <h3>{product.name}</h3>
                    {product.isCertified && (
                        <div class="certification-seal">
                            <span class="icon">✓</span>
                            <span>Certificado por IA</span>
                        </div>
                    )}
                </div>
            </div>
        ))}
    </div>
</MainLayout>

<style>
    .header-container {
        text-align: center;
        margin-bottom: 2rem;
    }
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
    }
    .product-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        overflow: hidden;
        text-align: center;
        transition: transform 0.2s;
        display: flex;
        flex-direction: column;
    }
    .product-card:hover {
        transform: translateY(-5px);
    }
    .product-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .card-content {
        padding: 1rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .product-card h3 {
        margin: 0 0 1rem 0;
        font-size: 1.25rem;
    }
    .certification-seal {
        background-color: var(--brand-green);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-weight: bold;
        margin: 0 auto;
    }
    .certification-seal .icon {
        font-size: 1.2rem;
    }
</style>
