---
const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            /* Primary Colors - Professional Certification Palette */
            --primary-navy: #0A1628;
            --primary-blue: #1E40AF;
            --primary-cyan: #0891B2;
            --accent-emerald: #059669;
            --accent-gold: #D97706;
            --accent-red: #DC2626;
            
            /* Neutral Palette */
            --neutral-50: #F8FAFC;
            --neutral-100: #F1F5F9;
            --neutral-200: #E2E8F0;
            --neutral-300: #CBD5E1;
            --neutral-400: #94A3B8;
            --neutral-500: #64748B;
            --neutral-600: #475569;
            --neutral-700: #334155;
            --neutral-800: #1E293B;
            --neutral-900: #0F172A;
            --white: #FFFFFF;
            
            /* Gradients */
            --gradient-primary: linear-gradient(135deg, var(--primary-navy) 0%, var(--primary-blue) 50%, var(--primary-cyan) 100%);
            --gradient-accent: linear-gradient(135deg, var(--accent-emerald) 0%, var(--primary-cyan) 100%);
            --gradient-surface: linear-gradient(135deg, var(--neutral-50) 0%, var(--white) 100%);
            --gradient-glass: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
            
            /* Shadows */
            --shadow-xs: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow-sm: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
            --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
            --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);
            --shadow-glow: 0 0 20px rgb(30 64 175 / 0.3);
            
            /* Border Radius */
            --radius-sm: 0.375rem;
            --radius-md: 0.5rem;
            --radius-lg: 0.75rem;
            --radius-xl: 1rem;
            --radius-2xl: 1.5rem;
            --radius-full: 9999px;
            
            /* Spacing */
            --space-xs: 0.25rem;
            --space-sm: 0.5rem;
            --space-md: 1rem;
            --space-lg: 1.5rem;
            --space-xl: 2rem;
            --space-2xl: 3rem;
            --space-3xl: 4rem;
            --space-4xl: 6rem;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--neutral-50);
            color: var(--neutral-800);
            line-height: 1.6;
            font-size: 16px;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Header Styles */
        header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px) saturate(180%);
            border-bottom: 1px solid var(--neutral-200);
            position: sticky;
            top: 0;
            z-index: 1000;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        header.scrolled {
            background: rgba(255, 255, 255, 0.98);
            box-shadow: var(--shadow-lg);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
            padding: var(--space-lg) var(--space-xl);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: var(--space-md);
            font-size: 1.75rem;
            font-weight: 800;
            color: var(--primary-navy);
            text-decoration: none;
            transition: transform 0.2s ease;
        }

        .logo:hover {
            transform: scale(1.02);
        }

        .logo-container {
            position: relative;
            width: 48px;
            height: 48px;
            background: var(--gradient-primary);
            border-radius: var(--radius-xl);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: var(--shadow-lg);
        }

        .logo-icon {
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            position: relative;
            z-index: 2;
        }

        .logo-container::before {
            content: '';
            position: absolute;
            inset: -2px;
            background: var(--gradient-primary);
            border-radius: var(--radius-xl);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .logo:hover .logo-container::before {
            opacity: 0.3;
        }

        .logo-text {
            display: flex;
            flex-direction: column;
            line-height: 1.1;
        }

        .logo-main {
            font-size: 1.75rem;
            font-weight: 800;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .logo-sub {
            font-size: 0.75rem;
            font-weight: 500;
            color: var(--neutral-500);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-top: -2px;
        }

        nav {
            display: flex;
            gap: var(--space-2xl);
            align-items: center;
        }

        nav a {
            color: var(--neutral-700);
            text-decoration: none;
            font-weight: 500;
            padding: var(--space-sm) var(--space-lg);
            border-radius: var(--radius-full);
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            font-size: 0.95rem;
        }

        nav a::before {
            content: '';
            position: absolute;
            inset: 0;
            background: var(--gradient-accent);
            border-radius: var(--radius-full);
            opacity: 0;
            transform: scale(0.8);
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        }

        nav a:hover::before {
            opacity: 0.1;
            transform: scale(1);
        }

        nav a:hover {
            color: var(--primary-blue);
            transform: translateY(-1px);
        }

        nav a.active {
            color: var(--primary-blue);
            background: rgba(30, 64, 175, 0.1);
        }

        .cta-button {
            background: var(--gradient-primary) !important;
            color: white !important;
            padding: var(--space-md) var(--space-xl) !important;
            border-radius: var(--radius-full);
            font-weight: 600;
            box-shadow: var(--shadow-lg);
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            border: none;
            position: relative;
            overflow: hidden;
        }

        .cta-button::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0.1) 100%);
            opacity: 0;
            transition: opacity 0.2s ease;
        }

        .cta-button:hover::before {
            opacity: 1;
        }

        .cta-button:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-xl), var(--shadow-glow);
        }

        /* Mobile Menu */
        .mobile-menu-toggle {
            display: none;
            background: none;
            border: none;
            font-size: 1.5rem;
            color: var(--neutral-700);
            cursor: pointer;
            padding: var(--space-sm);
            border-radius: var(--radius-md);
            transition: all 0.2s ease;
        }

        .mobile-menu-toggle:hover {
            background: var(--neutral-100);
        }

        /* Main Content */
        main {
            flex: 1;
            max-width: 1400px;
            margin: 0 auto;
            width: 100%;
            padding: 0 var(--space-xl);
        }

        /* Footer */
        footer {
            background: var(--primary-navy);
            color: var(--neutral-300);
            margin-top: var(--space-4xl);
            position: relative;
            overflow: hidden;
        }

        footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: var(--gradient-accent);
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: var(--space-4xl) var(--space-xl) var(--space-2xl);
            display: grid;
            grid-template-columns: 2fr repeat(3, 1fr);
            gap: var(--space-3xl);
        }

        .footer-brand {
            display: flex;
            flex-direction: column;
            gap: var(--space-lg);
        }

        .footer-logo {
            display: flex;
            align-items: center;
            gap: var(--space-md);
            margin-bottom: var(--space-md);
        }

        .footer-logo-container {
            width: 40px;
            height: 40px;
            background: var(--gradient-accent);
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .footer-logo-text {
            font-size: 1.5rem;
            font-weight: 800;
            color: white;
        }

        .footer-description {
            color: var(--neutral-400);
            line-height: 1.7;
            max-width: 300px;
        }

        .footer-section h3 {
            color: white;
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: var(--space-lg);
            position: relative;
        }

        .footer-section h3::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 30px;
            height: 2px;
            background: var(--gradient-accent);
            border-radius: 1px;
        }

        .footer-links {
            display: flex;
            flex-direction: column;
            gap: var(--space-md);
        }

        .footer-links a {
            color: var(--neutral-400);
            text-decoration: none;
            transition: all 0.2s ease;
            padding: var(--space-xs) 0;
        }

        .footer-links a:hover {
            color: var(--accent-emerald);
            transform: translateX(4px);
        }

        .footer-contact {
            display: flex;
            flex-direction: column;
            gap: var(--space-md);
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: var(--space-md);
            color: var(--neutral-400);
        }

        .contact-icon {
            width: 20px;
            height: 20px;
            background: var(--gradient-accent);
            border-radius: var(--radius-sm);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            flex-shrink: 0;
        }

        .footer-bottom {
            border-top: 1px solid var(--neutral-800);
            padding: var(--space-xl) var(--space-xl);
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: var(--neutral-500);
            font-size: 0.9rem;
        }

        .footer-social {
            display: flex;
            gap: var(--space-md);
        }

        .social-link {
            width: 36px;
            height: 36px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: var(--radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--neutral-400);
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .social-link:hover {
            background: var(--accent-emerald);
            color: white;
            transform: translateY(-2px);
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .header-content {
                padding: var(--space-lg) var(--space-lg);
            }

            main {
                padding: 0 var(--space-lg);
            }

            .footer-content {
                grid-template-columns: 1fr 1fr;
                gap: var(--space-2xl);
                padding: var(--space-3xl) var(--space-lg) var(--space-2xl);
            }

            .footer-brand {
                grid-column: 1 / -1;
            }
        }

        @media (max-width: 768px) {
            .header-content {
                padding: var(--space-md) var(--space-md);
            }

            .mobile-menu-toggle {
                display: block;
            }

            nav {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                background: rgba(255, 255, 255, 0.98);
                backdrop-filter: blur(20px);
                border-top: 1px solid var(--neutral-200);
                flex-direction: column;
                padding: var(--space-lg);
                gap: var(--space-sm);
                box-shadow: var(--shadow-xl);
            }

            nav.active {
                display: flex;
            }

            nav a {
                width: 100%;
                text-align: center;
                padding: var(--space-lg);
                border-radius: var(--radius-lg);
            }

            main {
                padding: 0 var(--space-md);
            }

            .footer-content {
                grid-template-columns: 1fr;
                gap: var(--space-xl);
                padding: var(--space-2xl) var(--space-md) var(--space-lg);
            }

            .footer-bottom {
                flex-direction: column;
                gap: var(--space-lg);
                padding: var(--space-lg) var(--space-md);
                text-align: center;
            }
        }

        /* Utility Classes */
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px) saturate(180%);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .gradient-text {
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .animate-float {
            animation: float 6s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            33% { transform: translateY(-10px) rotate(1deg); }
            66% { transform: translateY(5px) rotate(-1deg); }
        }

        .animate-pulse-glow {
            animation: pulse-glow 3s ease-in-out infinite;
        }

        @keyframes pulse-glow {
            0%, 100% { box-shadow: var(--shadow-lg); }
            50% { box-shadow: var(--shadow-xl), var(--shadow-glow); }
        }

        /* Scroll Animations */
        .fade-in-up {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .fade-in-up.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .stagger-delay-1 { transition-delay: 0.1s; }
        .stagger-delay-2 { transition-delay: 0.2s; }
        .stagger-delay-3 { transition-delay: 0.3s; }
        .stagger-delay-4 { transition-delay: 0.4s; }
    </style>
</head>
<body>
    <header id="header">
        <div class="header-content">
            <a href="/" class="logo">
                <div class="logo-container">
                    <div class="logo-icon">V</div>
                </div>
                <div class="logo-text">
                    <div class="logo-main">VQS</div>
                    <div class="logo-sub">AI Certification</div>
                </div>
            </a>
            <button class="mobile-menu-toggle" onclick="toggleMobileMenu()">☰</button>
            <nav id="nav-menu">
                <a href="/">Certificaciones</a>
                <a href="/nosotros">Nosotros</a>
                <a href="/servicios">Servicios</a>
                <a href="/tecnologia">Tecnología</a>
                <a href="/contacto" class="cta-button">Contactar</a>
            </nav>
        </div>
    </header>
    
    <main>
        <slot />
    </main>
    
    <footer>
        <div class="footer-content">
            <div class="footer-brand">
                <div class="footer-logo">
                    <div class="footer-logo-container">
                        <div style="color: white; font-weight: 700; font-size: 1.2rem;">V</div>
                    </div>
                    <div class="footer-logo-text">VQS</div>
                </div>
                <p class="footer-description">
                    Líder mundial en certificación de productos alimentarios mediante inteligencia artificial. 
                    Garantizamos calidad, seguridad y confianza en cada certificación.
                </p>
                <div class="footer-social">
                    <a href="#" class="social-link">📧</a>
                    <a href="#" class="social-link">📱</a>
                    <a href="#" class="social-link">🌐</a>
                    <a href="#" class="social-link">📊</a>
                </div>
            </div>
            
            <div class="footer-section">
                <h3>Servicios</h3>
                <div class="footer-links">
                    <a href="/certificacion-ia">Certificación IA</a>
                    <a href="/auditoria-automatizada">Auditoría Automatizada</a>
                    <a href="/monitoreo-continuo">Monitoreo Continuo</a>
                    <a href="/analisis-predictivo">Análisis Predictivo</a>
                    <a href="/trazabilidad">Trazabilidad Blockchain</a>
                </div>
            </div>
            
            <div class="footer-section">
                <h3>Industrias</h3>
                <div class="footer-links">
                    <a href="/lacteos">Productos Lácteos</a>
                    <a href="/carnes">Carnes y Proteínas</a>
                    <a href="/organicos">Alimentos Orgánicos</a>
                    <a href="/procesados">Alimentos Procesados</a>
                    <a href="/bebidas">Bebidas</a>
                </div>
            </div>
            
            <div class="footer-section">
                <h3>Contacto</h3>
                <div class="footer-contact">
                    <div class="contact-item">
                        <div class="contact-icon">📧</div>
                        <span>info@vqs-certification.com</span>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">📞</div>
                        <span>+56 2 2345 6789</span>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">📍</div>
                        <span>Santiago, Chile</span>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">🕒</div>
                        <span>24/7 Soporte</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="footer-bottom">
            <div>
                <p>&copy; 2024 VQS - Verification Quality Service. Todos los derechos reservados.</p>
            </div>
            <div class="footer-social">
                <span style="font-size: 0.8rem;">ISO 22000 | HACCP | FDA Certified</span>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const nav = document.getElementById('nav-menu');
            nav.classList.toggle('active');
        }

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const nav = document.getElementById('nav-menu');
            const toggle = document.querySelector('.mobile-menu-toggle');
            
            if (!nav.contains(event.target) && !toggle.contains(event.target)) {
                nav.classList.remove('active');
            }
        });

        // Header scroll effect
        window.addEventListener('scroll', function() {
            const header = document.getElementById('header');
            if (window.scrollY > 20) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        // Observe elements for animation
        document.addEventListener('DOMContentLoaded', function() {
            const animatedElements = document.querySelectorAll('.fade-in-up');
            animatedElements.forEach(el => observer.observe(el));
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>